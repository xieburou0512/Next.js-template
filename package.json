{
  "name": "nextjs-enterprise-boilerplate",
  "version": "0.1.0",
  "description": "A modern, production-ready Next.js 16 enterprise boilerplate with TypeScript, internationalization, and best practices",
  "author": "xieburou0512",
  "repository": {
    "type": "git",
    "url": "https://github.com/xieburou0512/Next.js-Enterprise-Boilerplate"
  },
  "keywords": [
    "nextjs",
    "next16",
    "react",
    "typescript",
    "tailwindcss",
    "i18n",
    "lingui",
    "bun",
    "pwa",
    "enterprise",
    "boilerplate",
    "starter"
  ],
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bun --bun next dev --turbo",
    "build": "next build",
    "build:test": "cross-env NODE_ENV=test next build",
    "build:prod": "cross-env NODE_ENV=production next build",
    "start": "bun --bun next start",
    "lint": "bun --bun next lint",
    "prettier": "bun prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "extract": "bun lingui extract --clean && git add . && git commit -m 'lingui' && git push",
    "extract-test": "bun lingui extract --clean "
  },
  "dependencies": {
    "@lingui/core": "5.6.1",
    "@lingui/macro": "4.14.1",
    "@lingui/react": "5.6.1",
    "@serwist/next": "9.2.3",
    "ahooks": "3.9.6",
    "clsx": "2.1.1",
    "cookies-next": "4.3.0",
    "cross-env": "7.0.3",
    "framer-motion": "12.23.25",
    "husky": "9.1.7",
    "ky": "1.14.0",
    "moment": "2.30.1",
    "next": "16.0.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "2.3.7",
    "zustand": "5.0.9"
  },
  "devDependencies": {
    "@lingui/cli": "^5.1.2",
    "@lingui/loader": "^5.1.2",
    "@lingui/swc-plugin": "^5.0.1",
    "typescript": "5.9.3",
    "@types/node": "20.19.25",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@types/react-transition-group": "4.4.12",
    "postcss": "8.5.6",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "0.6.14",
    "@next/bundle-analyzer": "14.2.33",
    "tailwindcss": "3.4.18",
    "@lingui/format-po": "4.14.1",
    "@svgr/webpack": "8.1.0",
    "@types/js-cookie": "3.0.6",
    "@types/lodash": "4.17.21",
    "lint-staged": "15.5.2",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json,ts,tsx}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ],
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
