{
  "name": "xieburou",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "next build",
    "build:test": "cross-env NODE_ENV=test next build",
    "build:prod": "cross-env NODE_ENV=production next build",
    "start": "bun --bun next start",
    "lint": "bun --bun next lint",
    "prettier": "bun prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "extract": "bun lingui extract --clean && git add . && git commit -m 'lingui' && git push",
    "extract-test": "bun lingui extract --clean "
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18",
    "next": "14.2.13",
    "@lingui/core": "^4.11.3",
    "@lingui/macro": "^4.11.3",
    "@lingui/react": "^4.11.3",
    "cookies-next": "^4.2.1",
    "@serwist/next": "^9.0.8",
    "ky": "^1.7.2",
    "swr": "^2.2.5",
    "ahooks": "^3.8.1",
    "moment": "^2.30.1",
    "husky": "^9.1.6",
    "cross-env": "^7.0.3",
    "clsx": "^2.1.1",
    "framer-motion": "^12.4.3",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-transition-group": "^4.4.11",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "@next/bundle-analyzer": "^14.2.13",
    "tailwindcss": "^3.4.1",
    "@lingui/format-po": "^4.11.3",
    "@lingui/loader": "^4.11.3",
    "@svgr/webpack": "^8.1.0",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.17.7",
    "@lingui/swc-plugin": "4.0.8",
    "lint-staged": "^15.2.10",
    "eslint": "^8",
    "eslint-config-next": "14.2.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "plugins": [
      "prettier-plugin-tailwindcs"
    ],
    "*.{js,jsx,less,md,json,ts,tsx}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ],
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
